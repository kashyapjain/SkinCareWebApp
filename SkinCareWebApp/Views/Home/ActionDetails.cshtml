            </ul>
        </div>
        <div class="col-md-6">
            <ul class="list-group list-group-light">
                @for (int i = median; i < Model.Count(); i++)
                {
                    <li class="list-group-item px-5">
                        <h5>@Model[i].Description.Description1</h5>
                    </li>
                }

