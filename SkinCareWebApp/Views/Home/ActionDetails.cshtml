                @{ int median = Convert.ToInt32(Math.Ceiling(Convert.ToDecimal(Model.Count()) / 2));}
                @for (int i = 0; i < median; i++)
                {
                    <li class="list-group-item px-5">
                        <h5>@Model[i].Description.Description1</h5>
                    </li>
                }

