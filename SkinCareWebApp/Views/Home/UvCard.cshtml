
<div class="row align-self-center justify-content-center">
    <div class="col-md-10 col-lg-6 col-xl-4" id="uv-card">
        <div class="card" style="color: #4B515D; border-radius: 35px; height: 100%">
            <div class="card-body p-4">
                <div class="d-flex flex-column">
                    <div class="d-flex">
                        <div class="d-flex flex-column  flex-grow-1 text-center ">
                            <h4 class="flex-grow-1 align-self-start">UV Index Info</h4>
                        </div>
                        <div class="d-flex flex-column align-items-start text-center">
                            <h6>@DateTime.Now.ToString("HH:mm:ss")</h6>
                        </div>
                    </div>
                    <div class="d-flex ">
                        <div class="d-flex flex-column flex-grow-1 ">
                            <div class="d-flex flex-grow-1 align-items-center justify-content-center text-center">
                                <h6 class="display-4 mt-4 mb-0 font-weight-bold" style="color: #1C2331;"> 5 </h6>
                            </div>
                            <div class="d-flex flex-grow-1 mt-4 ">
                                <div class="d-flex text-center mb-4">
                                    <input type="range" value="5" max="11" style="width:100%" />
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-column flex-grow-1 justify-content-end align-items-end">
                            <img src="~/Assets/Images/uv_image.jpg" style="width:300px;" />
                        </div>
                    </div>
                </div>
            </div>
    </div>
  </div>
    <div class="col-md-10 col-lg-6 col-xl-4" id="weather-card">
        <div class="card" style="color: #4B515D; border-radius: 35px; height:100%">
            <div class="card-body p-4">
                <div class="d-flex flex-column">
                    <div class="d-flex">
                        <h4 class="flex-grow-1 align-self-center">Weather Info</h4>
                        <h6 class="justify-content-end ">@DateTime.Now.ToShortDateString()</h6>
                    </div>
                    <div class="d-flex flex-column text-center mt-5 mb-4">
                        <h6 class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"> 36.5 C </h6>
                        <span class="small" style="color: #868B94">Stormy</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1" style="font-size: 1rem;">
                            <div>
                                <i class="fas fa-wind fa-fw" style="color: #868B94;"></i>
                                <span class="ms-1">40 km/h</span>
                            </div>
                            <div>
                                <i class="fas fa-tint fa-fw" style="color: #868B94;"></i> <span class="ms-1"> 84% </span>
                            </div>
                            <div>
                                <i class="fas fa-sun fa-fw" style="color: #868B94;"></i> <span class="ms-1"> 0.2h </span>
                            </div>
                        </div>
                        <div>
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-weather/ilu1.webp" width="100">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>